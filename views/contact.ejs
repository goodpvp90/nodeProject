<!DOCTYPE html>
<html>
<head>
    <title>צור קשר</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="icon" type="image/png" href="images/icon.png">
</head>
<body>
    <%- include('sidebar') %>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-4">
                    <form method="POST" action="/contact" onsubmit="return contactForm()">
                        <h2>צור קשר</h2>
                        <input name="fname" id="fname" type="text" class="form-control mb-3" placeholder="שם פרטי*" required>
                        <input name="lname" id="lname" type="text" class="form-control mb-3" placeholder="שם משפחה*" required>
                        <input name="phone" id="phone" type="text" class="form-control mb-3" placeholder="טלפון*" required>
                        <input name="email" id="email" type="text" class="form-control mb-3" placeholder="אימייל*" required>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="choose"><i class="fas fa-info-circle"></i></label>
                            </div>
                            <select name="selection" class="custom-select" required>
                                <option value="" disabled selected>בחר אפשרות*</option>
                                <option value="Option1">אפשרות 1</option>
                                <option value="Option2">אפשרות 2</option>
                                <option value="Option3">אפשרות 3</option>
                            </select>
                        </div>
                        <textarea name="subject" id="subject" class="form-control mb-3" placeholder="נושא*"></textarea>
                        <button id="login-btn" type="submit" class="btn btn-primary btn-block">שלח</button>
                        <div id="validation"></div>
                        <div id="rules"></div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
            </div>
        </div>
    </div>

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="/scripts/contact.js"></script>

<script>
    const urlParams = new URLSearchParams(window.location.search);
    const result = urlParams.get("result");
    const resultMessage = document.createElement("p");
    resultMessage.classList.add("text-danger");
    if(result === 'true'){
        document.querySelector("form").appendChild(resultMessage);
        resultMessage.textContent = `Contact sent, Thank you!`;  
    }
    document.querySelector("form").appendChild(resultMessage);
    
  </script>

</body>
</html>
