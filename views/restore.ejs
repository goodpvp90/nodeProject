<!DOCTYPE html>
<html>
  <head>
    <title>Restore</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
      <link href='https://fonts.googleapis.com/css?family=Noto Sans Hebrew' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/styles/style.css" />
    
    <link rel="icon" type="image/png" href="images/icon.png">
  </head>

  <body>
    <%- include('sidebar') %>
    <div class="main">
      <div class="container d-flex justify-content-center align-items-center vh-100">
      <div class="col-md-6 col-lg-4">
        <form method="POST" action="/restore">
          <div class="titleCard text-center align-items-center">
          <h2 id="login-title whi">שחזור סיסמה</h2>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i id ="iconDesign" class="fas fa-user"></i></span>
            </div>
            <input
              id="email"
              name="username"
              type="text"
              class="form-control"
              placeholder="כתובת מייל"
              required
            />
          </div>
          <button type="submit" class="btn btn-custom btn-block">
            שחזור סיסמה
          </button>
          <p>צריך משתמש? <a href="Signup">הרשמה</a></p>
        </form>

        <script>
          const urlParams = new URLSearchParams(window.location.search);
          const result = urlParams.get("result");
          const resultMessage = document.createElement("p");
          resultMessage.classList.add("text-danger");
    
          document.querySelector("form").appendChild(resultMessage);
          switch(result) {
            case 'false':
              resultMessage.textContent = "Email not found";  
              break;
            case 'true':
              const email = urlParams.get("email")
              resultMessage.textContent = `Password sent to ${email}`;  
              break;
            default:
                document.querySelector("form").appendChild(resultMessage);

          }
          
        </script>
      </div>
    </div>
   </div>
  </body>
</html>
